<Window x:Class="Projekt_WPF_Solution.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_WPF_Solution"
        mc:Ignorable="d"
        FontFamily="CalibriLight"
        FontSize="16"
        Title="Wypożyczalnia Samochodów" Height="350" Width="525" Icon="RentCarBlue.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" FontSize="18">
            <MenuItem Header="Pliki">
                <MenuItem Name="OpenMenuItem" Header="Otwórz" >
                    <MenuItem.Icon>
                        <Image   Source="Icons/Open.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="SaveMenuItem" Header="Zapisz">
                    <MenuItem.Icon>
                        <Image   Source="Icons/Save.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="CloseMenuItem"  Header="Zakończ">
                    <MenuItem.Icon>
                        <Image   Source="Icons/Close.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem.Icon>
                    <Image   Source="Icons/File.ico"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Pomoc">
                <MenuItem.Icon>
                    <Image   Source="Icons/Help.ico"/>
                </MenuItem.Icon>
                <MenuItem Name="AboutMenuItem" Header="O programie">
                    <MenuItem.Icon>
                        <Image   Source="Icons/Info.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Name="ContatcMenuItem"  Header="Kontakt" Click="ContatcMenuItem_Click">
                    <MenuItem.Icon>
                        <Image   Source="Icons/Contact.ico"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <TabControl Name="TabControl" Margin="3" TabStripPlacement="Left" Width="auto" Height="auto" Grid.Row="1">
            <TabItem Name="CarTab" Header="Samochody">
                
            </TabItem>
            <TabItem Name="ClientTab" Header="Klienci">

            </TabItem>
            <TabItem Name="RentTab" Header="Wypożyczenia">

            </TabItem>
        </TabControl>
    </Grid>
</Window>
